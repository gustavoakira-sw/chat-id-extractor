{
  "manifest_version": 3,
  "name": "Chat ID Extractor",
  "version": "1.0",
  "description": "Extract chat ID from the current URL and copy it to the clipboard.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["clipboardWrite"]
}
